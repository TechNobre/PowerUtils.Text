<Project Sdk="Microsoft.NET.Sdk">

  <!-- Assembly details -->
  <PropertyGroup>
    <ProjectGuid>4b8f1c43-97b4-48fe-b280-7620c63f4be6</ProjectGuid>

    <TargetFrameworks>netcoreapp3.1;net5.0;net6.0;net7.0;net8.0</TargetFrameworks>

    <AssemblyName>PowerUtils.Text</AssemblyName>
    <RootNamespace>PowerUtils.Text</RootNamespace>

    <Version>3.0.0</Version>

    <PackageOutputPath>bin\</PackageOutputPath>
  </PropertyGroup>


  <!-- Package details -->
  <PropertyGroup>
    <CurrentYear>$([System.DateTime]::UtcNow.ToString(yyyy))</CurrentYear>

    <PackageId>PowerUtils.Text</PackageId>
    <title>PowerUtils.Text</title>
    <Product>PowerUtils.Text</Product>

    <Authors>Nelson Nobre</Authors>
    <Company>TechNobre</Company>

    <License>MIT</License>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Copyright Â© $(CurrentYear) by TechNobre</Copyright>

    <Description>Helpers, extensions and utilities for manipulating strings</Description>
    <Summary>Helpers, extensions and utilities for manipulating strings</Summary>
    <PackageTags>PowerUtils;Utils;Helpers;Text;Formatting;Extension;Extensions;String</PackageTags>
    <PackageProjectUrl>https://github.com/TechNobre/PowerUtils.Text</PackageProjectUrl>
    <NeutralLanguage>en-GB</NeutralLanguage>

    <PackageIcon>logo_128x128.png</PackageIcon>
    <PackageReadmeFile>README.nuget.org.md</PackageReadmeFile>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/TechNobre/PowerUtils.Text</RepositoryUrl>
  </PropertyGroup>


  <!-- Source link -->
  <PropertyGroup>
    <Deterministic>true</Deterministic>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_ACTIONS)' == 'true'">true</ContinuousIntegrationBuild>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols Condition=" '$(DebugType)' != 'embedded' ">true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>


  <!-- DOCUMENTATION -->
  <PropertyGroup>
    <DocumentationFile>bin\PowerUtils.Text.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Prevent XML documentation warnings -->
  </PropertyGroup>


  <!-- Tests -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>$(AssemblyName).Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)'=='Release'">
    <None Include="..\assets\logo\logo_128x128.png" Pack="true" PackagePath="" />
    <None Include="..\LICENSE" Pack="true" PackagePath=""/>
    <None Include="..\README.nuget.org.md" Pack="true" PackagePath="" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>


  <ItemGroup>
    <SonarQubeSetting Include="sonar.coverage.exclusions">
      <Value>RegexUtils.cs</Value>
    </SonarQubeSetting>
  </ItemGroup>


</Project>
